{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "lib": ["dom", "es6", "esnext"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules", "dist"]
}
